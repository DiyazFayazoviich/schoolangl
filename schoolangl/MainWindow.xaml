<Window x:Class="schoolangl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:schoolangl"
        mc:Ignorable="d"
        Title="Школа языков 'Леарн'" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15*"/>
            <ColumnDefinition Width="143*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="59*"/>
            <RowDefinition Height="375*"/>
        </Grid.RowDefinitions>
        <Rectangle Fill="#FFE7FABF" Grid.ColumnSpan="2"></Rectangle>
        <Rectangle Fill="#FFE7FABF" Grid.RowSpan="2"></Rectangle>
        <Image Source="/Resources/school_logo.png" ></Image>
        <StackPanel  Grid.Row="1" VerticalAlignment="Bottom" Margin="5" >
            <Button x:Name="BackBtn" Click="BackBtn_Click" >Назад</Button>
            <Button x:Name="ExitdBtn" Click="ExitBtn_Click">Выход</Button>
        </StackPanel>
        <TextBlock x:Name="TitleTb" Grid.Column="1">Школа языков "Леарн"</TextBlock>
        <Frame Grid.Row="1" Grid.Column="1" x:Name="MainFrame" NavigationUIVisibility="Hidden"></Frame>
    </Grid>
</Window>
